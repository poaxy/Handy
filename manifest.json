{
  "manifest_version": 3,
  "name": "Handy",
  "version": "1.0",
  "description": "A simple text replacement extension.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "options_page": "html/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  }
}
