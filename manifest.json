{
  "manifest_version": 3,
  "name": "Handy",
  "version": "1.0",
  "description": "A simple text replacement extension.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*.meraki.lightning.force.com/*",
    "*://*.lightning.force.com/*",
    "*://*.salesforce.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "options_page": "html/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/universal-replacement.js",
        "js/content.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["js/universal-replacement.js", "js/iframe-handler.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  }
}
